function db_connect(){
    $connection = mysqli_connect(db_server,db_user,db_pass,db_name);
    return $connection;
}
$db = db_connect();

function db_disconnect($connection){
    if(isset($connection)){
        mysqli_close($connection);
        exit;
    }
}

function checkResult($result){
    global $db;
    if($result){
        return $result;
    }else{
        echo mysqli_error($db);
        db_disconnect($db);
        exit;
    }
}

