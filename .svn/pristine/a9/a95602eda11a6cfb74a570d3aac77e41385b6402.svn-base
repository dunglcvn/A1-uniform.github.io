function insert_into($product){    
    global $db;
   

    $sql = 'INSERT INTO `product`';
    $sql .= '(Name,Color,Size,Price,Type,Image) ';
    $sql .= 'VALUES (';
    $sql .= "'" . $product['name'] . "',";
    $sql .= "'" . $product['color'] . "',";
    $sql .= "'" . $product['size'] . "',";
    $sql .= "'" . $product['price'] . "',";
    $sql .= "'" . $product['type']  . "',";
    $sql .= "'" . $product['image']  . "'";
    $sql .= ')';

    
    
    $result = mysqli_query($db, $sql);
    
    return checkResult($result);



}
function find_product_by_id($id){
    global $db;

    $sql = "SELECT * FROM `product`";
    $sql .= "WHERE ProductID ='" . $id . "'";
    
    $result = mysqli_query($db,$sql);
    checkResult($result);
    $product = mysqli_fetch_assoc($result);
    mysqli_free_result($result);
    return $product;

}
function update_product($product){
    global $db;
 
    
    $sql = "UPDATE `product` SET";
    $sql .= "`Name`='" . $product['name'] . "',";
    $sql .= " Color ='" . $product['color'] . "',";
    $sql .= "Size ='" . $product['size'] . "',";
    $sql .= "Price ='" . $product['price'] . "',";
    $sql .= "Type ='" . $product['type'] . "'";
    $sql .= " WHERE ProductID ='" . $product['id'] . "'";
    $sql .= " LIMIT 1";
  
    $result = mysqli_query($db,$sql);
    return checkResult($result);


}
function delete_product($id){
    global $db;

    $sql = 'DELETE FROM `product`';
    $sql .= "Where ProductID= '" . $id . "'";
    $sql .= 'LIMIT 1';
   
    $result = mysqli_query($db,$sql);
    return checkResult($result);
}


