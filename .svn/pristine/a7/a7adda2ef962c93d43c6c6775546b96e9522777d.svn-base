.navbar{
    background-color: rgba(153,51,0, 0.9) !important;

}
.navbar li a{
    color: white !important;
}
.navbar li a:hover{
    color: black !important;
}
.carousel-inner img{
    width: 70%;
    margin-left:auto; 
    margin-right:auto; 
    display:block; 
}
.carousel-caption{
    color: rgb(255, 51, 0);
    /* background-color: rgba(153, 204, 255, 0.7); */
    text-shadow: 5px 5px 20px #000 ;
    display: inline;
   
}
/*Media Query*/
@media (max-width: 992px){
	.carousel-caption {
		bottom: 15%;
	}
	.carousel-caption h1{
		font-size: 200%;
	}
	
}
@media (max-width: 768px){	
	.carousel-caption {
		bottom: 10%;
	}
	.carousel-caption h1{
		font-size: 170%;
	}
	
}
@media (max-width: 576px){
	.carousel-caption {
		bottom: 5%;
	}
	.carousel-caption h1{
		font-size: 130%;
	}
	
}

.bg_login{
	margin-top: 20px;
}

.reg-title, p {
  margin-left: 12px;
  margin-top: 10px;
}

.loginForm {
  padding: 10px;
  margin: 0 auto;
  width: 380px;
  background-color: #f8f8fa;
  height: 60vh;
}

.registerForm {
  padding: 10px;
  margin: 0 auto;
  background-color: #f8f8fa;
  width: 380px;
  align-content: center;
}

.fname, .lname {
  width: 4cm;
  height: 1cm;
  border:  1px solid rgb(189, 189, 189);
}

.fname:focus, .lname:focus {
  transition:  1s ;
  border: black 2px solid;
}

.fname {
  float: left;
}

.lname {
  float: right;
}

.ip {
  width: 9cm;
  height: 1cm;
  border:  1px solid rgb(189, 189, 189);
}

.ip:focus {
  transition:  1s ;
  border: black 2px solid;
}

.cancelbtn {
	width: auto;
	padding: 10px 18px;
	background-color: #f44336;
  }
  
  /* Center the image and position the close button */
table {
  border-collapse: collapse;
}
  
table, th, td {
  padding : 10px;
}

.btnLogin {
  margin-left: 2cm;
  height: 1cm;
  width: 5cm;
  background-color: rgb(103, 113, 255);
  color: white;
}

.btnIndex {
  margin: 0 auto;
  color: rgb(175, 173, 173)
}

.btnIndex:hover {
  color: black;
  text-decoration: none;
}

.hidden {
  display: none;
}

.warning {
  color: red;
  font-size: 90%;
}

.check-confirm-pwd {
  display: none;
}

.caps-lock-warning1, .caps-lock-warning2 {
  display: none;
}

.errors{
  color: red;
  text-align: center;
  font-weight: 500;
 
  
}
.success{
  color: green;
  text-align: left;
  font: 500;
}
.table{
  border: 1px solid #fff;
	border-radius: 20px;
	margin-top: 20vh; /* vh= Viewport's height */
	padding: 30px;
	-webkit-box-shadow: 0px 1px 22px 5px rgba(0,0,0,0.75);
	-moz-box-shadow: 0px 1px 22px 5px rgba(0,0,0,0.75);
	box-shadow: 0px 1px 22px 5px rgba(0,0,0,0.75);
}

      
  
  
  